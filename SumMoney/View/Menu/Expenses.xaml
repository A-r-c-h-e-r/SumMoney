<Page x:Class="SumMoney.View.Menu.Expenses"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SumMoney.View.Menu"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
      xmlns:viewmodel="clr-namespace:SumMoney.ViewModel" 
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
      xmlns:local1="clr-namespace:SumMoney.Model"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="Expenses" Background="{DynamicResource DarkMainColor}" >

    <Page.DataContext>
        <viewmodel:MainViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <local1:CustomDueDateCellTemplateSelector x:Key="DueDateTemplateSelector"/>
        <local1:CustomStatusCellTemplateSelector x:Key="StatusTemplateSelector"/>
        <local1:TypeTemplateSelector x:Key="TypeTemplateSelector"/>

        <Style x:Key="VerticalScrollBar" TargetType="{x:Type ScrollBar}">
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Border  Name="opacityAnimated" Width="4.5" Background="Transparent" >
                            <Grid x:Name="GridRoot" Width="4.5" Background="Transparent">
                                <Track x:Name="PART_Track"  IsDirectionReversed="False">
                                    <Track.Thumb>
                                        <Thumb x:Name="ScrollBarThumb" Background="#50000000" Width="4.5">
                                            <Thumb.Style>
                                                <Style TargetType="{x:Type Thumb}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                                <Grid x:Name="Grid">
                                                                    <Border x:Name="ScrollBarRectangle" CornerRadius="2.2"
                                                                             Height="{TemplateBinding Width}" Background="{TemplateBinding Background}" />
                                                                </Grid>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Thumb.Style>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <EventTrigger RoutedEvent="ScrollBar.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"  From="0.6" To="1" Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="ScrollBar.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"  From="1" To="0.6" Duration="0:0:0.1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Opacity" Value="0.6"/>
                    <Setter Property="Width" Value="Auto" />
                    <Setter Property="Height" Value="6" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                <Border  Name="opacityAnimated" Height="4.5" Background="Transparent" >
                                    <Grid x:Name="GridRoot" Height="4.5" Background="Transparent">
                                        <Track x:Name="PART_Track"  IsDirectionReversed="False">
                                            <Track.Thumb>
                                                <Thumb x:Name="ScrollBarThumb" Background="#50000000" Height="4.5">
                                                    <Thumb.Style>
                                                        <Style TargetType="{x:Type Thumb}">
                                                            <Setter Property="IsTabStop" Value="False"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="{x:Type Thumb}">
                                                                        <Grid x:Name="Grid">
                                                                            <Border x:Name="ScrollBarRectangle" CornerRadius="2.2"
                                                                             Height="{TemplateBinding Width}" Background="{TemplateBinding Background}" />
                                                                        </Grid>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Thumb.Style>
                                                </Thumb>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Stylus.IsFlicksEnabled" Value="false" />
                    <Setter Property="Width" Value="7" />
                    <Setter Property="Height" Value="Auto" />
                    <Setter Property="Opacity" Value="0.6"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                <Border  Name="opacityAnimated" Width="4.5" Background="Transparent" >
                                    <Grid x:Name="GridRoot" Width="4.5" Background="Transparent">
                                        <Track x:Name="PART_Track" IsDirectionReversed="true" Focusable="false">
                                            <Track.Thumb>
                                                <Thumb x:Name="ScrollBarThumb" Background="#50000000" Width="4.5">
                                                    <Thumb.Style>
                                                        <Style TargetType="{x:Type Thumb}">
                                                            <Setter Property="IsTabStop" Value="False"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="{x:Type Thumb}">
                                                                        <Grid x:Name="Grid">
                                                                            <Border x:Name="ScrollBarRectangle" CornerRadius="2.2"
                                                                             Width="{TemplateBinding Width}" Background="{TemplateBinding Background}" />
                                                                        </Grid>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Thumb.Style>
                                                </Thumb>
                                            </Track.Thumb>
                                            <Track.IncreaseRepeatButton>
                                                <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="false" />
                                            </Track.IncreaseRepeatButton>
                                            <Track.DecreaseRepeatButton>
                                                <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="false" />
                                            </Track.DecreaseRepeatButton>
                                        </Track>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="false">
                                        <Setter TargetName="ScrollBarThumb" Property="Visibility" Value="Collapsed" />
                                    </Trigger>

                                    <Trigger Property="IsEnabled" Value="true">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="opacityAnimated" Storyboard.TargetProperty="(Border.Opacity)" 
                                                             Duration="0:0:3" From="0" To="10" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                    </Trigger>

                                    <Trigger Property="Orientation" Value="Horizontal">
                                        <Setter TargetName="GridRoot" Property="LayoutTransform">
                                            <Setter.Value>
                                                <RotateTransform Angle="-90" />
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="PART_Track" Property="LayoutTransform">
                                            <Setter.Value>
                                                <RotateTransform Angle="-90" />
                                            </Setter.Value>
                                        </Setter>
                                        
                                        <Setter TargetName="ScrollBarThumb" Property="Tag" Value="Horizontal" />
                                        <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand" />
                                        <Setter TargetName="PageUp" Property="Command" Value="ScrollBar.PageRightCommand" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SearchTextBoxExt" TargetType="{x:Type syncfusion:SfTextBoxExt}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type syncfusion:SfTextBoxExt}">
                        <Border  BorderBrush="#50000000" BorderThickness="1" CornerRadius="10" Background="{TemplateBinding Background}">
                            <Grid>
                                <Label x:Name="Watermark_"  Visibility="Hidden"  VerticalAlignment="Center" HorizontalAlignment="Left" Margin="7,-4,0,0" Foreground="#999999" Content="{TemplateBinding Watermark}"/>
                                <syncfusion:ButtonAdv  SizeMode="Small" Width="25" Height="25" Background="Transparent"
                                                                       SmallIcon="pack://application:,,,/Resources/Images/MainWindowImages/Header/SearchLogo.png"
                                                                       Margin="0,0,4,0" Style="{DynamicResource StyleButtonTopPanel}"
                                                                       VerticalAlignment="Center" HorizontalAlignment="Right" Content="Search">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction Command="{Binding ClickButtonSearch}" CommandParameter="{Binding ElementName=TextBoxExt}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </syncfusion:ButtonAdv>
                                <ScrollViewer Margin="10,3,24,3" x:Name="PART_ContentHost"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Visibility" TargetName="Watermark_" Value="Visible"/>
                            </MultiTrigger>
                            <EventTrigger SourceName="PART_ContentHost" RoutedEvent="MouseDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Watermark_" Storyboard.TargetProperty="Foreground.Color" To="Transparent" Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="syncfusion:SfTextBoxExt.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Watermark_" Storyboard.TargetProperty="Foreground.Color" To="#333333" Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="syncfusion:SfTextBoxExt.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Watermark_" Storyboard.TargetProperty="Foreground.Color" To="#999999" Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StyleTokenButtonAdv" TargetType="{x:Type syncfusion:ButtonAdv}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type syncfusion:ButtonAdv}">
                        <Border x:Name="Border" CornerRadius="11" Background="{TemplateBinding Background}">
                            <StackPanel Orientation="Horizontal">
                                <Label x:Name="Watermark_" Margin="1,-4,1,0" Foreground="{TemplateBinding Foreground}" Content="{TemplateBinding Content}"/>
                                <syncfusion:ButtonAdv x:Name="ButtonAdvClose" SizeMode="Small" Width="10" Height="10" Background="Transparent"
                                                                       SmallIcon="{TemplateBinding SmallIcon}" Margin="-5,1,3.5,0" VerticalAlignment="Center" HorizontalAlignment="Right" Content="Search">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction Command="{Binding ButtonAdvCloseMouseUp}" CommandParameter="{Binding ElementName=Watermark_}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <syncfusion:ButtonAdv.Style>
                                        <Style TargetType="{x:Type syncfusion:ButtonAdv}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type syncfusion:ButtonAdv}">
                                                        <Border Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" CornerRadius="100" Background="{TemplateBinding Background}">
                                                            <Image x:Name="Image" Source="{TemplateBinding SmallIcon}" 
                                                                                               VerticalAlignment="Center" HorizontalAlignment="Center"
                                                                                               Width="15"  Margin="1" RenderOptions.BitmapScalingMode="HighQuality" Opacity="0.7"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Duration="0:0:0.1" Storyboard.TargetProperty="Width" To="12"/>
                                                            <DoubleAnimation Duration="0:0:0.1" Storyboard.TargetProperty="Height" To="12"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                                <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Duration="0:0:0.1" Storyboard.TargetProperty="Width" To="10"/>
                                                            <DoubleAnimation Duration="0:0:0.1" Storyboard.TargetProperty="Height" To="10"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </syncfusion:ButtonAdv.Style>
                                </syncfusion:ButtonAdv>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StyleCurrencyTextBox" TargetType="{x:Type syncfusion:CurrencyTextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type syncfusion:CurrencyTextBox}">
                        <Border Background="{TemplateBinding Background}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Margin="0,0,-9,0">
                                    <Label Grid.Column="0"  Content="{TemplateBinding CurrencySymbol}" Foreground="#80000000"/>
                                </Border>
                                <Label Grid.Column="1"  Content="{TemplateBinding Value}"  Foreground="{TemplateBinding Foreground}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AnimationOpacitySplineSeries" TargetType="{x:Type syncfusion:SplineSeries}">
            <Style.Triggers>
                <EventTrigger RoutedEvent="UIElement.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(syncfusion:SplineSeries.Opacity)"  From="0.6" To="1" Duration="0:0:0.25" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="UIElement.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation  Storyboard.TargetProperty="(syncfusion:SplineSeries.Opacity)"  From="1" To="0.5" Duration="0:0:0.25"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StyleFormCurrencyTextBox" TargetType="{x:Type syncfusion:CurrencyTextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type syncfusion:CurrencyTextBox}">
                        <Border Background="{TemplateBinding Background}" >
                            <Grid>
                                <Label x:Name="CurrencyTextBox" Content="{TemplateBinding Tag}" Foreground="#24262C" FontSize="10"/>
                                <syncfusion:CurrencyTextBox  Foreground="{TemplateBinding Foreground}" IsEnabled="False" 
                                                            VerticalAlignment="Bottom" HorizontalAlignment="Right"
                                                            Background="Transparent" Value="{TemplateBinding Value}" 
                                                            FontSize="{TemplateBinding FontSize}" CurrencySymbol="$ "
                                                            FontFamily="Bahnschrift SemiBold" Style="{DynamicResource StyleCurrencyTextBox}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style  x:Key="StyleButton"  TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Form" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="11" Opacity="0.6">
                            <Label Content="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" VerticalAlignment="Center"
                                                               FontSize="{TemplateBinding FontSize}" FontFamily="{TemplateBinding FontFamily}"
                                                               FontWeight="{TemplateBinding FontWeight}" Margin="0,-2,0,0" HorizontalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="Border.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Form" Storyboard.TargetProperty="Opacity"  From="0.6" To="1" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Border.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Form" Storyboard.TargetProperty="Opacity"  From="1" To="0.6" Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
       
    </Page.Resources>

    <Grid Margin="10,0,10,0"  SizeChanged="DragButtonForm_SizeChanged">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="170"/>
                <RowDefinition Height="120" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- !Top -->
            <Border Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="3*" MinWidth="100" MaxWidth="200" />
                    </Grid.ColumnDefinitions>
                    <Label Content="Expenses" VerticalAlignment="Center" FontSize="22" Foreground="#C7000000"  Grid.Column="0"/>
                    <syncfusion:SfTextBoxExt x:Name="TextBoxExt" Grid.Column="1" Style="{DynamicResource SearchTextBoxExt}"
                                         SearchItemPath="Name" AutoCompleteMode="Append" SuggestionMode="StartsWith"
                                         AutoCompleteSource="{Binding Inquiry}"
                                         Text="{Binding Path=SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" 
                                         TextWrapping="Wrap" Watermark="Search" Height="22"
                                         Background="#40ffffff" Foreground="#444444" >
                        <syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>
                            <DataTemplate>
                                <Border Width="200" Height="200">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" Margin="5 2"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>
                    </syncfusion:SfTextBoxExt>
                </Grid>
            </Border>

            <!-- !First Panel -->
            <Border Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" MinWidth="200"/>
                        <ColumnDefinition Width="7*"/>
                    </Grid.ColumnDefinitions>

                    <!-- !Left First Panel -->
                    <Border Grid.Column="0" Margin="0,0,10,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="7.8*"/>
                                <RowDefinition Height="2.2*"/>
                            </Grid.RowDefinitions>

                            <!-- !Up Panel -->
                            <Border Grid.Row="0" Background="{DynamicResource ColorMain}" Margin="0,0,0,10" CornerRadius="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2.3*"/>
                                        <RowDefinition Height="2.3*"/>
                                        <RowDefinition Height="2.3*"/>
                                        <RowDefinition Height="3*"/>
                                    </Grid.RowDefinitions>

                                    <!-- !Panel1-->
                                    <Border Grid.Row="0">
                                        <Grid>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="20" Height="20" Margin="5,0,0,0" Background="#FFC1CCE6" CornerRadius="6">
                                                    <Image Source="pack://application:,,,/Resources/Images/ExpensesPageImages/CalendarIcon.png" Opacity="0.6" Width="15" Height="15" Margin="1,1,0,0"/>
                                                </Border>
                                                <Label Content="Past Doe" Margin="0,4,0,0" FontSize="12"
                                                   FontFamily="Roboto" FontWeight="Normal" Foreground="#272931"/>
                                            </StackPanel>
                                            <syncfusion:CurrencyTextBox Foreground="#FF31343E" IsEnabled="False" HorizontalAlignment="Right" FontSize="15"
                                                                Background="Transparent" Value="{Binding DataBinding_.PastDoe, Mode=TwoWay}" 
                                                                CurrencySymbol="$" FontFamily="Bahnschrift SemiBold" 
                                                                Style="{DynamicResource StyleCurrencyTextBox}"/>
                                        </Grid>
                                    </Border>

                                    <!-- !Panel2-->
                                    <Border Grid.Row="1">
                                        <Grid>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="20" Height="20" Margin="5,0,0,0" Background="#FFC1CCE6" CornerRadius="6">
                                                    <Image Source="pack://application:,,,/Resources/Images/ExpensesPageImages/ListIcon.png" Opacity="0.6" Width="15" Height="15" />
                                                </Border>
                                                <Label Content="Schedules" Margin="0,4,0,0" FontSize="12"
                                                   FontFamily="Roboto" FontWeight="Normal" Foreground="#272931"/>
                                            </StackPanel>
                                            <syncfusion:CurrencyTextBox Foreground="#FF31343E" IsEnabled="False" HorizontalAlignment="Right" FontSize="15"
                                                                Background="Transparent" Value="{Binding DataBinding_.Schedules, Mode=TwoWay}" 
                                                                CurrencySymbol="$" FontFamily="Bahnschrift SemiBold" 
                                                                Style="{DynamicResource StyleCurrencyTextBox}"/>
                                        </Grid>
                                    </Border>

                                    <!-- !Panel3-->
                                    <Border  Grid.Row="2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="9*"/>
                                                <ColumnDefinition Width="103*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
                                                <Border Width="20" Height="20" Margin="5,0,0,0" Background="#FFC1CCE6" CornerRadius="6">
                                                    <Image Source="pack://application:,,,/Resources/Images/ExpensesPageImages/ClockIcon.png" Opacity="0.6" Width="15" Height="15" Margin="1,1,0,0"/>
                                                </Border>
                                                <Label Content="Pending" Margin="0,4,0,0" FontSize="12" 
                                                   FontFamily="Roboto" FontWeight="Normal" Foreground="#272931"/>
                                            </StackPanel>
                                            <syncfusion:CurrencyTextBox Foreground="#FF31343E" IsEnabled="False" HorizontalAlignment="Right" FontSize="15"
                                                                Background="Transparent" Value="{Binding DataBinding_.Pending, Mode=TwoWay}" 
                                                                CurrencySymbol="$" FontFamily="Bahnschrift SemiBold" 
                                                                Style="{DynamicResource StyleCurrencyTextBox}" Cursor="IBeam" Culture="ru-RU" Grid.Column="1" />
                                        </Grid>
                                    </Border>

                                    <!-- !Panel4-->
                                    <Border Grid.Row="3" Margin="5,0,5,5" Background="#FFC1CCE6" BorderBrush="Red" >
                                        <syncfusion:CurrencyTextBox Foreground="#FF2B2D35" IsEnabled="False" HorizontalAlignment="Right" FontSize="15"
                                                                Background="Transparent" Value="{Binding DataBinding_.Sum1, Mode=TwoWay}" 
                                                                CurrencySymbol="$" FontFamily="Bahnschrift SemiBold" 
                                                                Style="{DynamicResource StyleCurrencyTextBox}" Cursor="IBeam"/>
                                        <Border.Style>
                                            <Style TargetType="{x:Type Border}">
                                                <Style.Triggers>
                                                    <EventTrigger RoutedEvent="Border.MouseEnter">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetProperty="Background.Color" To="#A7B6DC" Duration="0:0:0.15" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                    <EventTrigger RoutedEvent="Border.MouseLeave">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetProperty="Background.Color" To="#C1CCE6" Duration="0:0:0.1" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- !Down Panel -->
                            <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="1">
                                <Grid>
                                    <Label Content="Paid" Margin="0,2,0,0" FontSize="19"
                                                   FontFamily="Roboto" FontWeight="Medium" Foreground="#272931"/>
                                    <syncfusion:CurrencyTextBox Foreground="#24262C" IsEnabled="False" HorizontalAlignment="Right" FontSize="19"
                                                                Background="Transparent" Value="{Binding DataBinding_.Paid, Mode=TwoWay}" 
                                                                CurrencySymbol="$ " FontFamily="Bahnschrift SemiBold" 
                                                                Style="{DynamicResource StyleCurrencyTextBox}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!--TODO !!!!        ScrollViewer с syncfusion:SfChart работает не правильно        !!! -->
                    <!--TODO !!!!    ScrollViewer подстраивается под нынешнюю ширину syncfusion:SfChart !!! -->
                    <!--TODO !!!!                    По этому он временно выключен а точнее навсегда((( !!!  -->
                    <!--TODO VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled"-->

                    <!-- !Second Panel -->

                    <ScrollViewer  Grid.Column="1" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled" >
                        <Border Grid.Column="1" Background="{DynamicResource ColorMain}" MinWidth="420" CornerRadius="1" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*"/>
                                    <RowDefinition Height="6*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" MaxWidth="250"/>
                                        <ColumnDefinition Width="0.1*"/>
                                        <ColumnDefinition Width="7*" MaxWidth="700" />
                                    </Grid.ColumnDefinitions>

