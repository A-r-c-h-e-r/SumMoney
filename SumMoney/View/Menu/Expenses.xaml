                                                      Visibility="{Binding visibilityObj[1].Visibility_, Mode=TwoWay}" Style="{DynamicResource StyleTokenButtonAdv}" SmallIcon="pack://application:,,,/Resources/Images/ExpensesPageImages/XIcon.png"/>
                                    <syncfusion:ButtonAdv Content="{Binding NameTokenButtonAdv[2]}" SizeMode="Normal" Height="20" Background="#FFCED6E9" Foreground="#FF5A5D64" Margin="4,0,0,0"
                                                      Visibility="{Binding visibilityObj[2].Visibility_, Mode=TwoWay}" Style="{DynamicResource StyleTokenButtonAdv}" SmallIcon="pack://application:,,,/Resources/Images/ExpensesPageImages/XIcon.png"/>
                                    <syncfusion:ButtonAdv Content="{Binding NameTokenButtonAdv[3]}" SizeMode="Normal" Height="20" Background="#FFCED6E9" Foreground="#FF5A5D64" Margin="4,0,0,0"
                                                      Visibility="{Binding visibilityObj[3].Visibility_, Mode=TwoWay}" Style="{DynamicResource StyleTokenButtonAdv}" SmallIcon="pack://application:,,,/Resources/Images/ExpensesPageImages/XIcon.png"/>
                                    <syncfusion:ButtonAdv Content="{Binding NameTokenButtonAdv[4]}" SizeMode="Normal" Height="20" Background="#FFCED6E9" Foreground="#FF5A5D64" Margin="4,0,0,0"
                                                      Visibility="{Binding visibilityObj[4].Visibility_, Mode=TwoWay}" Style="{DynamicResource StyleTokenButtonAdv}" SmallIcon="pack://application:,,,/Resources/Images/ExpensesPageImages/XIcon.png"/>
                                    <syncfusion:ButtonAdv Content="{Binding NameTokenButtonAdv[5]}" SizeMode="Normal" Height="20" Background="#FFCED6E9" Foreground="#FF5A5D64" Margin="4,0,0,0"
                                                      Visibility="{Binding visibilityObj[5].Visibility_, Mode=TwoWay}" Style="{DynamicResource StyleTokenButtonAdv}" SmallIcon="pack://application:,,,/Resources/Images/ExpensesPageImages/XIcon.png"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </ScrollViewer>
            <!-- !Third Panel -->
            <ScrollViewer  Grid.Row="3" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Margin="0,10,0,10"  >
                <Border Grid.Row="3"  Background="{DynamicResource ColorMain}" CornerRadius="1">
                    <Grid>
                        <StackPanel Orientation="Horizontal" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <StackPanel.Resources>
                                <Style x:Key="StyleButtonAdvDataGrid" TargetType="{x:Type syncfusion:ButtonAdv}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type syncfusion:ButtonAdv}">
                                                <Border x:Name="Border" CornerRadius="9" Background="{TemplateBinding Background}">
                                                    <StackPanel Orientation="Horizontal" Margin="0,-1,0,-1">
                                                        <Label Content="{TemplateBinding Label}" Margin="1,-4,1,0" Foreground="{TemplateBinding Foreground}"/>
                                                        <Image Source="{TemplateBinding SmallIcon}" Margin="0,4,4,4" Opacity="0.6"/>
                                                    </StackPanel>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </StackPanel.Resources>
                            <syncfusion:ButtonAdv  SizeMode="Normal" Label="Paid" Height="18" Background="#BEF0C4" Foreground="#3E9046" Margin="20,0,0,0" SmallIcon="pack://application:,,,/Resources/Images/ExpensesPageImages/ChekMarkIcon.png" Style="{DynamicResource StyleButtonAdvDataGrid}" />
                            <syncfusion:ButtonAdv SizeMode="Normal" Label="Paid" Height="18" Background="#BFC9E2" Foreground="#59647F" Margin="10,0,0,0" SmallIcon="pack://application:,,,/Resources/Images/ExpensesPageImages/CalendarIcon.png" Style="{DynamicResource StyleButtonAdvDataGrid}" />
                            <syncfusion:ButtonAdv SizeMode="Normal" Label="Paid" Height="18" Background="#BFC9E2" Foreground="#59647F" Margin="10,0,0,0" SmallIcon="pack://application:,,,/Resources/Images/ExpensesPageImages/ClockIcon.png" Style="{DynamicResource StyleButtonAdvDataGrid}" />
                        </StackPanel>
                        
                        <syncfusion:SfDataGrid x:Name="dataGrid" Margin="0,25,0,0" RowHeight="30" MinWidth="700" SelectionMode="Extended" 
                                           BorderThickness="0"  IsReadOnly="True"  ItemsSource="{Binding DataGridModel_}"
                                           ColumnSizer="Star" AutoGenerateColumns="False" AllowResizingColumns="True" >
                        <syncfusion:SfDataGrid.Resources>

                            <Style TargetType="syncfusion:GridCell">
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>
                            <Style TargetType="syncfusion:GridViewDefinition">
                                <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
                            </Style>

                            <Style TargetType="syncfusion:HeaderRowControl">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="syncfusion:HeaderRowControl">
                                            <Border BorderBrush="#96A3C6" BorderThickness="0,1,0,1">
                                                <Grid Margin="50,0,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Margin="0,-3, 0,-3" FontFamily="Roboto" FontWeight="Medium" Foreground="#3f3f3f" Content="Expense Tile" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0"/>
                                                    <Label Margin="0,-3, 0,-3" FontFamily="Roboto" FontWeight="Medium" Foreground="#3f3f3f" Content="Category" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"/>
                                                    <Label Margin="0,-3, 0,-3" FontFamily="Roboto" FontWeight="Medium" Foreground="#3f3f3f" Content="Type" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2"/>
                                                    <Label Margin="0,-3, 0,-3" FontFamily="Roboto" FontWeight="Medium" Foreground="#3f3f3f" Content="Payee" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="3"/>
                                                    <Label Margin="0,-3, 0,-3" FontFamily="Roboto" FontWeight="Medium" Foreground="#3f3f3f" Content="Account" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="4"/>
                                                    <Label Margin="0,-3, 0,-3" FontFamily="Roboto" FontWeight="Medium" Foreground="#3f3f3f" Content="Status" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="5"/>
                                                    <Label Margin="0,-3, 0,-3" FontFamily="Roboto" FontWeight="Medium" Foreground="#3f3f3f" Content="PaidYTD" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="6"/>
                                                    <Label Margin="0,-3, 0,-3" FontFamily="Roboto" FontWeight="Medium" Foreground="#3f3f3f" Content="LastPaid" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="7"/>
                                                    <Label Margin="0,-3, 0,-3" FontFamily="Roboto" FontWeight="Medium" Foreground="#3f3f3f" Content="AmountPaid" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="8"/>
                                                    <Label Margin="0,-3, 0,-3" FontFamily="Roboto" FontWeight="Medium" Foreground="#3f3f3f" Content="DueDate" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="9"/>
                                                </Grid>
                                            </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </syncfusion:SfDataGrid.Resources>
                            <syncfusion:SfDataGrid.DetailsViewDefinition>

                                <syncfusion:TemplateViewDefinition Height="30">
                                    <syncfusion:TemplateViewDefinition.RowTemplate>
                                        <DataTemplate >
                                            
                                            <Grid Background="#FAFBFF" Margin="-20,-5,-5,-5" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                                <Label Content="{Binding Data.Created}" Grid.Column="0" FontFamily="Roboto" FontWeight="Medium" Foreground="#3f3f3f"/>
                                                <Label Content="{Binding Data.LastChange}"  Grid.Column="1" FontFamily="Roboto" FontWeight="Medium" Foreground="#3f3f3f"/>
                                                <Label Content="{Binding Data.Tag}"  Grid.Column="2" FontFamily="Roboto" FontWeight="Medium" Foreground="#3f3f3f"/>
                                                <Label Content="{Binding Data.Resourses}"  Grid.Column="3" FontFamily="Roboto" FontWeight="Medium" Foreground="#3f3f3f"/>
                                                <Label Content="{Binding Data.Note}"  Grid.Column="4" FontFamily="Roboto" FontWeight="Medium" Foreground="#3f3f3f"/>
                                                <Image Grid.Column="5" Source="pack://application:,,,/Resources/Images/ExpensesPageImages/DeleteIcon.png" Width="20" Height="20" Margin="0,0,10,0" HorizontalAlignment="Right"/>
                                                <Image Grid.Column="6" Source="pack://application:,,,/Resources/Images/ExpensesPageImages/NoteIcon.png" Width="20" Height="20"  Margin="10,0,0,0"  HorizontalAlignment="Left"/>
                                            </Grid>
                                    </DataTemplate>
                                    </syncfusion:TemplateViewDefinition.RowTemplate>
                                </syncfusion:TemplateViewDefinition>


                            </syncfusion:SfDataGrid.DetailsViewDefinition>
                            <syncfusion:SfDataGrid.Columns>
                                <syncfusion:GridCheckBoxSelectorColumn MappingName="SelectorColumn" Width="26">
                                    <syncfusion:GridCheckBoxSelectorColumn.CellStyle>
                                        <Style TargetType="syncfusion:GridCell">
                                            <Style.Resources>
                                                <Style TargetType="CheckBox">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="CheckBox">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                BorderBrush="#BFC9E2" BorderThickness="1"
                                                                Width="17" Height="17" CornerRadius="5">
                                                                <Image Source="pack://application:,,,/Resources/Images/ExpensesPageImages/CheckMarkIcon.png"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter Property="Background" Value="#57B660"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Style.Resources>
                                    </Style>
                                </syncfusion:GridCheckBoxSelectorColumn.CellStyle>
                                <syncfusion:GridCheckBoxSelectorColumn.HeaderStyle>
                                    <Style TargetType="syncfusion:GridHeaderCellControl">
                                        <Style.Resources>
                                            <Style TargetType="CheckBox">
                                                <Setter Property="Background" Value="#57B660"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="CheckBox">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                Width="17" Height="17" CornerRadius="5" Margin="-3">
                                                                <Image Source="pack://application:,,,/Resources/Images/ExpensesPageImages/MinusIcon.png"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Style.Resources>
                                    </Style>
                                </syncfusion:GridCheckBoxSelectorColumn.HeaderStyle>
                            </syncfusion:GridCheckBoxSelectorColumn>
                            <syncfusion:GridTextColumn MappingName="ExpenseTile">
                                <syncfusion:GridTextColumn.CellStyle >
                                    <Style TargetType="syncfusion:GridCell">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="syncfusion:GridCell">
                                                    <Border BorderBrush="#96A3C6" BorderThickness="0,0.5,0,0.5" Margin="0,-0.5,0,0.5">
                                                        <Label Content="{Binding ExpenseTile}" Foreground="#3f3f3f" FontFamily="Roboto" Margin="0,2,0,0" FontWeight="Normal" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </syncfusion:GridTextColumn.CellStyle>
                            </syncfusion:GridTextColumn>

                            <syncfusion:GridTextColumn MappingName="Category">
                                <syncfusion:GridTextColumn.CellStyle>
                                    <Style TargetType="syncfusion:GridCell">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="syncfusion:GridCell">
                                                    <Border BorderBrush="#96A3C6" BorderThickness="0,0.5,0,0.5" Margin="0,-0.5,0,0.5">
                                                        <Label Content="{Binding Category}" Foreground="#3f3f3f" FontFamily="Roboto" Margin="0,2,0,0" FontWeight="Normal" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </syncfusion:GridTextColumn.CellStyle>
                            </syncfusion:GridTextColumn>

                            <syncfusion:GridTextColumn MappingName="Type" CellTemplateSelector="{DynamicResource  ResourceKey=TypeTemplateSelector}"/>
                            <!-- Todo!!!  CellTemplateSelector="{DynamicResource  ResourceKey=TypeTemplateSelector}"-->

                            <syncfusion:GridTextColumn MappingName="Payee">
                                <syncfusion:GridTextColumn.CellStyle>
                                    <Style TargetType="syncfusion:GridCell">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="syncfusion:GridCell">
                                                    <Border BorderBrush="#96A3C6" BorderThickness="0,0.5,0,0.5" Margin="0,-0.5,0,0.5">
                                                        <Label Content="{Binding Payee}" Foreground="#00A611" FontFamily="Roboto" Margin="0,2,0,0" FontWeight="Normal" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </syncfusion:GridTextColumn.CellStyle>
                            </syncfusion:GridTextColumn>

                            <syncfusion:GridTextColumn MappingName="Account">
                                <syncfusion:GridTextColumn.CellStyle>
                                    <Style TargetType="syncfusion:GridCell">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="syncfusion:GridCell">
                                                    <Border BorderBrush="#96A3C6" BorderThickness="0,0.5,0,0.5" Margin="0,-0.5,0,0.5">
                                                        <Label Content="{Binding Account}" Foreground="#00A611" FontFamily="Roboto" Margin="0,2,0,0" FontWeight="Normal" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </syncfusion:GridTextColumn.CellStyle>
                            </syncfusion:GridTextColumn>

                            <syncfusion:GridTextColumn MappingName="Status" CellTemplateSelector="{DynamicResource  ResourceKey=StatusTemplateSelector}"/>
                            <!-- Todo!!!  CellTemplateSelector="{DynamicResource  ResourceKey=StatusTemplateSelector}"-->

                            <syncfusion:GridNumericColumn MappingName="PaidYTD">
                                <syncfusion:GridNumericColumn.CellStyle>
                                    <Style TargetType="syncfusion:GridCell">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="syncfusion:GridCell">
                                                    <Border BorderBrush="#96A3C6" BorderThickness="0,0.5,0,0.5" Margin="0,-0.5,0,0.5">
                                                        <Grid HorizontalAlignment="Center" Margin="7,2,0,0" >
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Label Grid.Row="0" Content="$" Foreground="#96A3C6" FontFamily="Roboto" Margin="-9,0,0,0" FontWeight="Medium"/>
                                                            <Label Grid.Row="1" Content="{Binding PaidYTD}" Foreground="#3f3f3f" FontFamily="Roboto" FontWeight="Normal"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </syncfusion:GridNumericColumn.CellStyle>
                            </syncfusion:GridNumericColumn>

                            <syncfusion:GridNumericColumn MappingName="LastPaid">
                                <syncfusion:GridNumericColumn.CellStyle>
                                    <Style TargetType="syncfusion:GridCell">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="syncfusion:GridCell">
                                                    <Border BorderBrush="#96A3C6" BorderThickness="0,0.5,0,0.5" Margin="0,-0.5,0,0.5">
                                                        <Grid HorizontalAlignment="Center" Margin="7,2,0,0" >
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Label Grid.Row="0" Content="$" Foreground="#96A3C6" FontFamily="Roboto" Margin="-9,0,0,0" FontWeight="Medium"/>
                                                            <Label Grid.Row="1" Content="{Binding LastPaid}" Foreground="#3f3f3f" FontFamily="Roboto" FontWeight="Normal"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </syncfusion:GridNumericColumn.CellStyle>
                            </syncfusion:GridNumericColumn>

                            <syncfusion:GridNumericColumn MappingName="AmountPaid">
                                <syncfusion:GridNumericColumn.CellStyle>
                                    <Style TargetType="syncfusion:GridCell">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="syncfusion:GridCell">
                                                    <Border BorderBrush="#96A3C6" BorderThickness="0,0.5,0,0.5" Margin="0,-0.5,0,0.5">
                                                        <Grid HorizontalAlignment="Center" Margin="7,2,0,0" >
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Label Grid.Row="0" Content="$" Foreground="#96A3C6" FontFamily="Roboto" Margin="-9,0,0,0" FontWeight="Medium"/>
                                                            <Label Grid.Row="1" Content="{Binding AmountPaid}" Foreground="#3f3f3f" FontFamily="Roboto" FontWeight="Normal"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </syncfusion:GridNumericColumn.CellStyle>
                            </syncfusion:GridNumericColumn>

                            <syncfusion:GridTextColumn MappingName="DueDate"  CellTemplateSelector="{DynamicResource  ResourceKey=DueDateTemplateSelector}"/>
                            <!-- Todo!!!  CellTemplateSelector="{DynamicResource  ResourceKey=DueDateTemplateSelector}"-->
                        </syncfusion:SfDataGrid.Columns>
                    </syncfusion:SfDataGrid>
                    </Grid>
                </Border>
            </ScrollViewer>
        </Grid>


        <!-- !DragButton -->
        <Grid AllowDrop="False" Height="70"  Width="70" x:Name="DragButtonForm"
              VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Grid AllowDrop="False" ShowGridLines="True" Height="70"  Width="70"/>
            <Button Height="60" Width="60" Background="#26B637"
                    BorderBrush="#3820B931" Name="DragButton" BorderThickness="7" 
                    PreviewMouseUp="DragButton_PreviewMouseUp" 
                    PreviewMouseRightButtonDown="DragButton_PreviewMouseRightButtonDown"
                    PreviewMouseMove="DragButton_PreviewMouseMove">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="Border" CornerRadius="100" Background="{TemplateBinding Background}"
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        BorderBrush="{TemplateBinding BorderBrush}">
                                        <Image Source="pack://application:,,,/Resources/Images/ExpensesPageImages/DollarIcon.png" 
                                               Margin="10" Opacity="0.6"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <EventTrigger RoutedEvent="Border.MouseEnter">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ThicknessAnimation Storyboard.TargetProperty="BorderThickness"
                                                                    Duration="0:0:0.3"  From="7" To="9.5" >
                                                        <ThicknessAnimation.EasingFunction>
                                                            <PowerEase Power="2" />
                                                        </ThicknessAnimation.EasingFunction>
                                                    </ThicknessAnimation>
                                                    <DoubleAnimation Duration="0:0:0.3" Storyboard.TargetProperty="Width" To="65" >
                                                        <DoubleAnimation.EasingFunction>
                                                            <PowerEase Power="2" />
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                    <DoubleAnimation Duration="0:0:0.3" Storyboard.TargetProperty="Height" To="65" >
                                                        <DoubleAnimation.EasingFunction>
                                                            <PowerEase Power="2" />
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                    <ColorAnimation Storyboard.TargetProperty="Background.Color" To="#27AF2F" Duration="0:0:0.2" >
                                                        <ColorAnimation.EasingFunction>
                                                            <PowerEase Power="1" />
                                                        </ColorAnimation.EasingFunction>
                                                    </ColorAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="Border.MouseLeave">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <Storyboard>
                                                        <ThicknessAnimation Storyboard.TargetProperty="BorderThickness"
                                                                    Duration="0:0:0.3"  From="9.5" To="7">
                                                            <ThicknessAnimation.EasingFunction>
                                                                <PowerEase Power="2" />
                                                            </ThicknessAnimation.EasingFunction>
                                                        </ThicknessAnimation>
                                                        <DoubleAnimation Duration="0:0:0.3" Storyboard.TargetProperty="Width" To="60">
                                                            <DoubleAnimation.EasingFunction>
                                                                <PowerEase Power="2" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                        <DoubleAnimation Duration="0:0:0.3" Storyboard.TargetProperty="Height" To="60">
                                                            <DoubleAnimation.EasingFunction>
                                                                <PowerEase Power="2" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                        <ColorAnimation Storyboard.TargetProperty="Background.Color" To="#26B637" Duration="0:0:0.2" >
                                                            <ColorAnimation.EasingFunction>
                                                                <PowerEase Power="1" />
                                                            </ColorAnimation.EasingFunction>
                                                        </ColorAnimation>
                                                    </Storyboard>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Page>
